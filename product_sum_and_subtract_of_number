#include<iostream>
using namespace std;
int main()
{
	int n;
	cout<<"enter a number that you wnat to product ,sum and sub of product and sum:-"<<endl;
	cin>>n;
	int prod=1;
	int sum=0;
	while(n!=0)
	{
		int digit=n%10;
		prod=prod*digit;
		sum=prod+digit;
		n=n/10;
	}
	int sub=prod-sum;
	cout<<"product is"<<prod<<"   "<<"sum is"<<sum<<endl;
	cout<<sub;
return 0;
}
