#include<iostream>
using namespace std;
int main()
{
	int a,b;
	cout<<"enter the first number:-"<<endl;
	cin>>a;
	cout<<"enter the second number:-"<<endl;
	cin>>b;
	char op;
	cout<<"enter the operation that you want to perform:-"<<endl;
	//cout<<"enter + for addition - for sub * for multiplication \ for division % for modulus"<<endl;
	cin>>op;
	switch(op)
	{
		case '+': cout<<(a+b)<<endl;
				break;
		case '-': cout<<(a-b)<<endl;
				break;
		case '*': cout<<(a*b)<<endl;
				break;
		case '/': cout<<(a/b)<<endl;
				break;
		case '%': cout<<(a%b)<<endl;
				break;
		default: cout<<"enter valid operation"<<endl;
	}
return 0;
}
